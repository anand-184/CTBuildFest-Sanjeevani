<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/app_bg">

    <!-- Map Fragment Container -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Map View - CHANGED ID to avoid conflict -->
        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Map Loading Overlay -->
        <ProgressBar
            android:id="@+id/mapLoadingProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

    </FrameLayout>

    <!-- Disaster Filter Panel - FIXED positioning -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/filterCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="0dp"
        android:layout_gravity="top"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        android:backgroundTint="@color/CardColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filter Hotspots"
                android:textColor="@color/on_surface"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <com.google.android.material.chip.ChipGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:singleSelection="false">

                    <!-- Earthquake Filter -->
                    <com.google.android.material.chip.Chip
                        android:id="@+id/earthquakeChip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Earthquake"
                        app:chipIcon="@drawable/baseline_terrain_24"
                        app:checkedIconVisible="true"
                        style="@style/Widget.Material3.Chip.Filter" />

                    <!-- Flood Filter -->
                    <com.google.android.material.chip.Chip
                        android:id="@+id/floodChip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Flood"
                        app:chipIcon="@drawable/baseline_water_damage_24"
                        app:checkedIconVisible="true"
                        style="@style/Widget.Material3.Chip.Filter" />

                    <!-- Fire Filter -->
                    <com.google.android.material.chip.Chip
                        android:id="@+id/fireChip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fire"
                        app:chipIcon="@drawable/baseline_local_fire_department_24"
                        app:checkedIconVisible="true"
                        style="@style/Widget.Material3.Chip.Filter" />

                    <!-- Storm Filter -->
                    <com.google.android.material.chip.Chip
                        android:id="@+id/stormChip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Storm"
                        app:chipIcon="@drawable/baseline_storm_24"
                        app:checkedIconVisible="true"
                        style="@style/Widget.Material3.Chip.Filter" />

                    <!-- Safe Zones Filter -->
                    <com.google.android.material.chip.Chip
                        android:id="@+id/safeZoneChip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Safe Zones"
                        app:chipIcon="@drawable/baseline_safety_check_24"
                        app:checkedIconVisible="true"
                        style="@style/Widget.Material3.Chip.Filter" />

                </com.google.android.material.chip.ChipGroup>

            </HorizontalScrollView>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Current Location FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/locationFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:layout_marginBottom="80dp"
        android:src="@drawable/baseline_my_location_24"
        app:tint="@color/white"
        app:backgroundTint="@color/primary"
        app:elevation="8dp" />

    <!-- Emergency Quick Action FAB -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/emergencyFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_margin="16dp"
        android:layout_marginBottom="80dp"
        android:text="Report Incident"
        app:icon="@drawable/baseline_report_24"
        app:iconTint="@color/white"
        app:backgroundTint="@color/error"
        android:textColor="@color/on_error"
        app:elevation="8dp" />

    <!-- Offline Mode Indicator -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/offlineIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/primary"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/baseline_signal_wifi_off_24"
                app:tint="@color/white"
                android:layout_marginEnd="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Offline Mode"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Bottom Sheet for Location Details -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:cardCornerRadius="24dp"
        app:cardElevation="16dp"
        android:visibility="gone"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <View
                android:layout_width="40dp"
                android:layout_height="4dp"
                android:background="@color/on_surface_variant"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp" />

            <!-- Location Header -->
            <TextView
                android:id="@+id/locationTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Earthquake Zone - High Risk"
                android:textColor="@color/on_surface"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Severity Indicator -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <View
                    android:id="@+id/severityIndicator"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/red_circle"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/severityText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="High Severity"
                    android:textColor="@color/error"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Location Details -->
            <TextView
                android:id="@+id/locationDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Magnitude 6.2 earthquake reported. Avoid unstable structures. Follow evacuation routes to safe zones."
                android:textColor="@color/on_surface_variant"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="16dp" />

            <!-- Quick Actions -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick Actions"
                android:textColor="@color/on_surface"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/navigateButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Navigate"
                    android:layout_marginEnd="8dp"
                    app:icon="@drawable/baseline_navigation_24"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/shareButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Share"
                    android:layout_marginStart="8dp"
                    app:icon="@drawable/baseline_share_24"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
